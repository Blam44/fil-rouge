{% extends 'base.html.twig' %}

{% block body %}
    <h2><a href="{{ path('serie_show', { id: episode.season.serie.id }) }}">{{ episode.season.serie.name }}</a></h2>
    <h3><a href="{{ path('season_show', { id: episode.season.id }) }}">Saison {{ episode.season.number }}</a> - Épisode {{ episode.number }} : {{ episode.name }}</h3>

    <table>
        <tbody>
            <tr>
                <th>Résumé</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            <tr>
                <th>Date de diffusion</th>
                <td>{% if episode.runtime %}{{ episode.runtime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Serie</th>
                <td>{{ episode.season.serie.name }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>{{ episode.season.number }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Aireddate</th>
                <td>{{ episode.airedDate|date('d-m-Y') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('episode_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('episode_edit', { 'id': episode.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
