{% extends 'base.html.twig' %}

{% block body %}
    <h1>Episode list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Synopsis</th>
                <th>Runtime</th>
                <th>Number</th>
                <th>Aireddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td><a href="{{ path('episode_show', { 'id': episode.id }) }}">{{ episode.id }}</a></td>
                <td>{{ episode.name }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>{% if episode.runtime %}{{ episode.runtime|date('H:i:s') }}{% endif %}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.airedDate|date('d-m-Y') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('episode_show', { 'id': episode.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('episode_edit', { 'id': episode.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('episode_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
